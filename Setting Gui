from Tkinter import *

master = Tk()

master.title("config.txt")
File = open("config.txt","w")

port = Label(master, text="Enter Port:")
port.grid(row=0, column=0)

eport = Entry(master)
eport.grid(row=1, column=0)

graph = Label(master, text="oilPress=1;coolant=2;voltage=3 \nPlease Enter Number")
graph.grid(row=3, column=0)

egraph= Entry(master)
egraph.grid(row=4, column=0)

tgraph= Label(master, text="Enter a number for top colour")
tgraph.grid(row=5, column=0)

etgraph= Entry(master)
etgraph.grid(row=6, column=0)

bgraph= Label(master, text="Enter a number for bottom colour")
bgraph.grid(row=7, column=0)

ebgraph= Entry(master)
ebgraph.grid(row=8, column=0)

def write():
    #print e.get()
    File.write("port="+eport.get())
    File.write("\noilPress;1;coolant;2;voltage;3")
    File.write("\ngraph=2,1,3\n")
    File.write(egraph.get())
    File.write("\ncolourLow=34\ncolourHigh=5\n")
    File.write(etgraph.get())
    File.write("\ncolourLow=adgsdfadfsadf\n")
    File.write(ebgraph.get())

Button(master, text="Enter", width=10, command=write).grid(row=9, column=0)

Button(master, text='Quit', command=master.quit).grid(row=9, column=4)

mainloop()

